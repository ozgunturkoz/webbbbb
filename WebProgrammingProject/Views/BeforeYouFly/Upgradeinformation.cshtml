
@{
    ViewBag.Title = "Upgradeinformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+material-symbols-outlined" rel="stylesheet">
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <title>Upgrade Information</title>

</head>


    <body class="upgradebody">
        <h1 class="upgrade-heading">UPGRADE YOUR SERVICE</h1>
        <p style="margin-top:5%; font-size: 1.5em;  color: #001d3d;">You can browse the information below to change your choices and upgrade your service.</p>

        <main class="services-grid">
            <section class="service">
                <img src="WebPhoto/service1.png" alt="Priority Boarding">
                <h2>Priority Boarding</h2>
                <p style="font-size: 1.20em;">Enjoy the convenience of boarding the plane first. Skip the lines and get to your seat quickly.</p>
                <p style="font-size: 1.10em;">Price: $20</p>
                <button class="Upgradebutton" onclick="reserveService('Priority Boarding', 20)">Reserve Now</button>
            </section>

            <section class="service">
                <img src="WebPhoto/service2.png" alt="Lounge Access">
                <h2>Lounge Access</h2>
                <p style="font-size: 1.20em;">Relax in our luxurious airport lounges before your flight. Enjoy complimentary snacks and drinks.</p>
                <p style="font-size: 1.10em;">Price: $50</p>
                <button class="Upgradebutton" onclick="reserveService('Lounge Access', 50)">Reserve Now</button>
            </section>

            <section class="service">
                <img src="WebPhoto/service3.png" alt="Extra Legroom">
                <h2>Extra Legroom</h2>
                <p style="font-size: 1.20em;">Upgrade your seat to enjoy extra legroom during your flight. Stretch out and travel in comfort.</p>
                <p style="font-size: 1.10em;">Price: $30</p>
                <button class="Upgradebutton" onclick="reserveService('Extra Legroom', 30)">Reserve Now</button>
            </section>

            <section class="service">
                <img src="WebPhoto/service4.png" alt="In-Flight Meals">
                <h2>In-Flight Meals</h2>
                <p style="font-size: 1.20em;">Pre-order delicious meals for your flight. Choose from a variety of cuisines to suit your taste.</p>
                <p style="font-size: 1.10em;">Price: $25</p>
                <button class="Upgradebutton" onclick="reserveService('In-Flight Meals', 25)">Reserve Now</button>
            </section>
        </main>
    </body>
</html>
