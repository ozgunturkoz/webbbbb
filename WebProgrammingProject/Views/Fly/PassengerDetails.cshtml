
@using WebProgrammingProject.Models
@{

    ViewBag.Title = "PassengerDetails";
}

@model Passenger
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+material-symbols-outlined"
          rel="stylesheet" />
    <title>Passenger Details</title>

    <script type="module"
            src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule
            src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>




    <link rel="stylesheet" href="~/Content/CSS/SelectFlight.css" />
    <link rel="stylesheet" href="~/Content/CSS/Navbar.css" />
    <link href="~/Content/CSS/PassengerDetails.css" rel="stylesheet" />
    <script src="~/Content/JS/PassengerDetails.js" defer></script>


</head>
<body class="PassengerDetailsBody">
    <header>
        <!-- Site başlığı -->
        <a href="@Url.Action("Index", "Home")" class="Skyfly">SKY LINES</a>

        <!-- Arama kutusu -->
        <div class="search-bar-container active">
            <!-- Arama ikonu -->
            <img src="https://cdn4.iconfinder.com/data/icons/evil-icons-user-interface/64/magnifier-512.png"
                 alt="magnifier"
                 class="magnifier" />
            <!-- Arama inputu -->
            <input type="text" class="input" placeholder="Search ..." />
        </div>

        <!-- Navigasyon menüsü -->
        <nav>
            <!-- Menü bağlantıları -->
            <a class="navigation-a" href="@Url.Action("Index", "Home")">Home</a>
            <a class="navigation-a" href="@Url.Action("About", "Home")">About</a>
            <a class="navigation-a" href="@Url.Action("Contact", "Home")">Contact</a>
            <a class="navigation-a" href="@Url.Action("Login", "Account")">Login</a>
        </nav>
    </header>


    <!-- ************************************PASSENGER DETAILS PART*********************************************-->
    <style>
        .passengerInfo {
            height: 600px;
            width: 800px;
            border: 2px solid rgb(6, 14, 118); /* Kenar çizgisi ekleyebilirsiniz */
            padding: 18px; /* İçerik ile kenar arasındaki boşluğu ayarlar */
            border-radius: 6px; /* Kenar yuvarlaklığını ayarlar */
            background-color: #eaedef; /* Arkaplan rengini değiştirebilirsiniz */
            position: relative;
            margin-top: 20px;
        }

        .contactInfo {
            height: 600px;
            width: 800px;
            position: relative;
            border: 2px solid rgb(6, 14, 118);
            background-color: #eaedef;
            margin-top: 20px;
            border-radius: 6px;
            padding: 18px;
        }

        .Cut-Line {
            margin: 9px;
        }
    </style>

    <div class="Step-Flight">
        <a href="@Url.Action("SelectFlight", "Fly")">
            <span class="material-symbols-outlined">travel</span>
            <h3 class="Step-Flight-h3">Select Flight</h3>
        </a>
        <div class="Cut-Line"></div>
        <a href="@Url.Action("PassengerDetails", "Fly")">
            <span class="material-symbols-outlined">person</span>
            <h3 class="Passenger-Details-h3">Passenger Details</h3>
        </a>
        <div class="Cut-Line"></div>
        <a href="@Url.Action("AdditionalServices", "Fly")">
            <span class="material-symbols-outlined">airplane_ticket</span>
            <h3 class="Additional-Services-h3">Additional Services</h3>
        </a>
        <div class="Cut-Line"></div>
        <a href="@Url.Action("Payment", "Fly")">
            <span class="material-symbols-outlined">credit_card</span>
            <h3 class="Payment-h3">Payment</h3>
        </a>
    </div>

    <section class=passengerDetails>
        <h2> <ion-icon name="person-sharp"></ion-icon> Passenger Informations</h2>
        <br>
        <section class="passengerInfo">
            <h3> <ion-icon name="person-sharp"></ion-icon> Passenger Information | Adult</h3><br>
            <div class="horizontal-divider"><hr class="solid"></div><br>

            @using (Html.BeginForm("PassengerDetails", "Fly", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <table class="table1">
                    <tr>
                        <td>
                            @Html.RadioButtonFor(m => m.P_Gender, "female")<ion-icon name="woman"></ion-icon> Female
                            @Html.RadioButtonFor(m => m.P_Gender, "male")<ion-icon name="man"></ion-icon> Male
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <div class="form_group" field>
                                @Html.TextBoxFor(m => m.P_FirstName, new { @class = "form__field", placeholder = "First Name", required = "required" })
                                @Html.LabelFor(m => m.P_FirstName, "First Name", new { @class = "form__label" })
                                @Html.ValidationMessageFor(m => m.P_FirstName)
                            </div>
                        </td>

                        <td>
                            <div class="form_group" field>
                                @Html.TextBoxFor(m => m.P_LastName, new { @class = "form__field", placeholder = "Last Name", required = "required" })
                                @Html.LabelFor(m => m.P_LastName, "Last Name", new { @class = "form__label" })
                                @Html.ValidationMessageFor(m => m.P_LastName)
                            </div>
                        </td>

                        <td>
                            <p><ion-icon name="alert-circle-outline"></ion-icon> It is not possible to change the name and surname information after completing the reservation process.</p>
                        </td>

                    </tr>

                    <tr>
                        <td>
                            <div class="form_group" field>
                                @Html.TextBoxFor(m => m.P_BirthDate, new { @class = "form__field", placeholder = "MM/YYYY", type = "date", required = "required" })
                                @Html.LabelFor(m => m.P_BirthDate, "Birth Date", new { @class = "form__label" })
                                @Html.ValidationMessageFor(m => m.P_BirthDate)
                            </div>
                        </td>

                    </tr>
                    <tr>
                        <td>
                            <input type="checkbox" id="turkishCitizen" name="turkishCitizen" onchange="toggleTCInput()" />
                            <label for="turkishCitizen" id="turkishCitizenLabel">I am a Turkish citizen</label>
                        </td>
                        <td id="tcRow" style="display: none;">
                            <div class="form_group" field>
                                @Html.TextBoxFor(m => m.P_TC, new { @class = "form__field", placeholder = "TC NO", required = "required" })
                                @Html.LabelFor(m => m.P_TC, "TC", new { @class = "form__label" })
                                @Html.ValidationMessageFor(m => m.P_TC)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div class="form_group" field>
                                @Html.TextBoxFor(m => m.P_FrequentFlightNum, new { @class = "form__field", placeholder = "Frequent Flight Number", required = "required" })
                                @Html.LabelFor(m => m.P_FrequentFlightNum, "Frequent Flight Number", new { @class = "form__label" })
                                @Html.ValidationMessageFor(m => m.P_FrequentFlightNum)
                            </div>
                        </td>
                    </tr>
                </table>

                <button type="submit">Submit</button>
            }

        </section>



        <section class="contactInfo">
            <h3> <ion-icon name="call"></ion-icon> Contact Details</h3><br>
            <div class="horizontal-divider"><hr class="solid"></div><br>

            @using (Html.BeginForm("PassengerDetails", "Fly", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <table>
                    <tr>
                        <td>
                            <div class="form_group" field>
                                @Html.TextBoxFor(m => m.P_Email, new { @class = "form__field", placeholder = "E-mail Address", required = "required" })
                                @Html.LabelFor(m => m.P_Email, "Email", new { @class = "form__label" })
                                @Html.ValidationMessageFor(m => m.P_Email)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <div class="form_group" field>
                                @Html.TextBoxFor(m => m.P_PhoneNumber, new { @class = "form__field", placeholder = "Phone Number", required = "required" })
                                @Html.LabelFor(m => m.P_PhoneNumber, "Phone Number", new { @class = "form__label" })
                                @Html.ValidationMessageFor(m => m.P_PhoneNumber)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <br>
                            <h4>Get To Know Us</h4>
                            <p>By selecting the following communication channel(s) in accordance with the terms specified in the <a href="Privacy.html">Privacy Notice</a>, I consent to be contacted via the channel(s) regarding products, services, and opportunities offered by Sky Lines, its affiliates, and partners; and that my personal data shared with Sky Lines for marketing and customer experience activities as described in the <a href="Policy.html">Policy</a> to be processed, used, and transferred domestically and abroad for this purpose.</p>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <form action="">
                                <br>
                                <input type="checkbox" name="allows" id="viaSMS" value="SMS" />I allow notifications via SMS.
                                <br />
                                <input type="checkbox" name="allows" id="viaEmail" value="Email" />I allow notifications via email.
                            </form>
                        </td>
                    </tr>
                </table>

                <button type="submit">Submit</button>
            }

        </section>



        <a href="@Url.Action("AdditionalService", "Fly")" type="continue" id="continueBtn" style=" text-align: center;  text-decoration: none; font-size: 1.15em;">Continue</a>
    </section>


    <!-- Ionicons ikonları için gerekli script -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

</body>
</html>



